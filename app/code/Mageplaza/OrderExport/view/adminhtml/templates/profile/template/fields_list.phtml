<?php
/* @var $block \Mageplaza\OrderExport\Block\Adminhtml\Profile\Edit\Tab\Renderer\TemplateContent */
$element            = $block->getElement();
$note               = $element->getNote() ? '<div class="note">' . $element->getNote() . '</div>' : '';
$elementBeforeLabel = $element->getExtType() == 'checkbox' || $element->getExtType() == 'radio';
$addOn              = $element->getBeforeElementHtml() || $element->getAfterElementHtml();
$fieldId            = ($element->getHtmlContainerId()) ? ' id="' . $element->getHtmlContainerId() . '"' : '';
$fieldClass         = "admin__field field field-{$element->getId()} {$element->getCssClass()}";
$fieldClass         .= ($elementBeforeLabel) ? ' choice' : '';
$fieldClass         .= ($addOn) ? ' with-addon' : '';
$fieldClass         .= ($element->getRequired()) ? ' _required' : '';
$fieldClass         .= ($note) ? ' with-note' : '';

$fieldAttributes = $fieldId . ' class="' . $fieldClass . '" ' . $block->getUiId('form-field', $element->getId());

if (!$element->getNoDisplay()): ?>
    <?php if ($element->getType() == 'hidden'): ?>
        <?php echo $element->getElementHtml() ?>
    <?php else: ?>
        <div<?php echo $fieldAttributes ?>>
            <?php if ($elementBeforeLabel): ?>
                <?php echo $element->getElementHtml() ?>
                <?php echo $element->getLabelHtml('', $element->getScopeLabel()) ?>
                <?php echo $note ?>
            <?php else: ?>
                <?php echo $element->getLabelHtml('', $element->getScopeLabel()) ?>
                <div class="admin__field-control control" style="display: none">
                    <?php echo ($addOn) ? '<div class="addon">' . $element->getElementHtml() . '</div>' : $element->getElementHtml(); ?>
                    <?php echo $block->getHintHtml() ?>
                    <?php echo $note ?>
                </div>
                <?php $profileAttrCollection = $block->getProfileAttrCollection(); ?>
                <div id="select-attr" style="display: none">
                    <option value="0"><?= __('--Please Select--') ?></option>
                    <?php foreach ($profileAttrCollection as $key => $groupAttr) : ?>
                        <?php if ($key == 'item') continue; ?>
                        <optgroup attr-type="<?php echo $groupAttr['type'] ?>"
                                  label="<?php echo $groupAttr['label'] ?>"><?php echo $key . '. ' . $groupAttr['label']; ?>
                            <?php foreach ($groupAttr['values'] as $attr) : ?>
                                <?php /** @var \Magento\Eav\Model\Entity\Attribute $attr */ ?>
                                <option value="<?php echo $attr['COLUMN_NAME'] ?>">
                                    <?php echo ucwords(str_replace('_', ' ', $attr['COLUMN_NAME'])) . "({$attr['COLUMN_NAME']})"; ?>
                                </option>
                            <?php endforeach; ?>
                        </optgroup>
                    <?php endforeach; ?>
                </div>
                <div id="item-select-attr" style="display: none">
                    <option value="0"><?= __('--Please Select--') ?></option>
                    <?php foreach ($profileAttrCollection['item']['values'] as $attr) : ?>
                        <?php /** @var \Magento\Eav\Model\Entity\Attribute $attr */ ?>
                        <option value="<?php echo $attr['COLUMN_NAME'] ?>">
                            <?php echo ucwords(str_replace('_', ' ', $attr['COLUMN_NAME'])) . "({$attr['COLUMN_NAME']})"; ?>
                        </option>
                    <?php endforeach; ?>
                </div>
                <div id="fields-map" class="admin__scope-old">
                    <div class="fields-header">
                        <div class="row">
                            <div class="fields-header__name"><?= __('Column Name') ?></div>
                            <div class="fields-header__type"><?= __('Type') ?></div>
                            <div class="fields-header__value"><?= __('Value') ?></div>
                        </div>
                    </div>
                    <div class="fields-col"></div>
                    <a id="add-column" class="btn primary"><?= __('Add') ?></a>
                </div>
            <?php endif; ?>
        </div>
    <?php endif; ?>
<?php endif; ?>



