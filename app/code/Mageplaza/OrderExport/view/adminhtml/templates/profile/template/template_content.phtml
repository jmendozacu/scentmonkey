<?php
/* @var $block \Mageplaza\OrderExport\Block\Adminhtml\Profile\Edit\Tab\Renderer\TemplateContent */
$element            = $block->getElement();
$note               = $element->getNote() ? '<div class="note">' . $element->getNote() . '</div>' : '';
$elementBeforeLabel = $element->getExtType() == 'checkbox' || $element->getExtType() == 'radio';
$addOn              = $element->getBeforeElementHtml() || $element->getAfterElementHtml();
$fieldId            = ($element->getHtmlContainerId()) ? ' id="' . $element->getHtmlContainerId() . '"' : '';
$fieldClass         = "admin__field field field-{$element->getId()} {$element->getCssClass()}";
$fieldClass         .= ($elementBeforeLabel) ? ' choice' : '';
$fieldClass         .= ($addOn) ? ' with-addon' : '';
$fieldClass         .= ($element->getRequired()) ? ' _required' : '';
$fieldClass         .= ($note) ? ' with-note' : '';

$fieldAttributes = $fieldId . ' class="' . $fieldClass . '" ' . $block->getUiId('form-field', $element->getId());
$modifiersData   = $block->getModifier() ? \Mageplaza\OrderExport\Helper\Data::jsonEncode($block->getModifier()) : '{}';
$fieldsList      = $block->getFieldsList() ? $block->getFieldsList() : '{}';

if (!$element->getNoDisplay()): ?>
    <?php if ($element->getType() == 'hidden'): ?>
        <?php echo $element->getElementHtml() ?>
    <?php else: ?>
        <div<?php echo $fieldAttributes ?>>
            <?php if ($elementBeforeLabel): ?>
                <?php echo $element->getElementHtml() ?>
                <?php echo $element->getLabelHtml('', $element->getScopeLabel()) ?>
                <?php echo $note ?>
            <?php else: ?>
                <?php echo $element->getLabelHtml('', $element->getScopeLabel()) ?>
                <div class="admin__field-control control">
                    <a id="insert-variable" class="btn"><?php echo __('Insert Variables') ?></a>
                    <?php echo ($addOn) ? '<div class="addon">' . $element->getElementHtml() . '</div>' : $element->getElementHtml(); ?>
                    <?php echo $block->getHintHtml() ?>
                    <?php echo $note ?>
                </div>
            <?php endif; ?>
        </div>
    <?php endif; ?>
<?php endif; ?>
<div id="insert-variable-popup" class="admin__scope-old">
    <?php $profileAttrCollection = $block->getProfileAttrCollection(); ?>
    <?php foreach ($profileAttrCollection as $id => $groupAttr) : ?>
        <div class="section-config">
            <div class="entry-edit-head admin__collapsible-block">
                <span id="ox_variable_<?= $id ?>-link" class="entry-edit-head-link"></span>
                <a id="ox_variable_<?= $id ?>-head" href="#ox_variable_<?= $id ?>-link"
                   onclick="Fieldset.toggleCollapse('ox_variable_<?= $id ?>'); return false;"><?= $groupAttr['label'] ?></a>
            </div>
            <input id="ox_provider_<?= $id ?>-state" type="hidden">

            <fieldset class="config admin__collapsible-block admin__scope-old" id="ox_variable_<?= $id ?>"
                      attr-type="<?php echo $groupAttr['type'] ?>">
                <?php foreach ($groupAttr['values'] as $attr) : ?>
                    <?php /** @var \Magento\Eav\Model\Entity\Attribute $attr */ ?>
                    <div class="attr-code" id="<?php echo $attr['COLUMN_NAME'] ?>"
                         code="<?php echo $attr['COLUMN_NAME'] ?>">
                        <div class="row">
                            <label class="attr-code-label"><?php echo ucwords(str_replace('_', ' ', $attr['COLUMN_NAME'])) . " ({$attr['COLUMN_NAME']})"; ?></label>
                            <button class="insert"><?= __('Add') ?></button>
                            <button class="add-modifier"><?= __('Add Filter') ?></button>
                            <label class="liquid-variable">{{ <?php echo $groupAttr['type'] . '.' . $attr['COLUMN_NAME'] ?>
                                }}</label>
                        </div>
                        <div class="row-modifier">
                            <div class="modifier-group" code="<?php echo $attr['COLUMN_NAME'] ?>"></div>
                        </div>
                    </div>
                <?php endforeach; ?>
            </fieldset>
        </div>
        <script type="text/javascript">//<![CDATA[
            require(['prototype'], function () {
                Fieldset.applyCollapse('ox_variable_<?= $id ?>');
            });
            //]]>
        </script>
    <?php endforeach; ?>
</div>
<script type="text/x-magento-init">
		{
			"*": {
				"Mageplaza_OrderExport/js/profile/initTemplateTab":{
					"url": "<?php echo $block->getUrl('mporderexport/manageprofiles/loadtemplate', ['form_key' => $block->getFormKey()]) ?>",
					"checkConnectionUrl" : "<?php echo $block->getUrl('mporderexport/manageprofiles/checkconnection', ['form_key' => $block->getFormKey()]) ?>",
					"fieldsMap": <?php echo $fieldsList ?>,
					"modifiersData": <?php echo $modifiersData ?>,
					"profileType": "<?php echo $block->getProfileType() ?>",
					"previewUrl": "<?php echo $block->getUrl('mporderexport/manageprofiles/preview') ?>",
					"resetFlagUrl": "<?php echo $block->getUrl('mporderexport/manageprofiles/resetflag') ?>",
					"defaultTemplate": <?php echo $block->getDefaultTemplate() ?>
				}
			}
		}
</script>